@model ToDoListApp.EntityLayer.Concrete.ToDo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Görev Ekle";
}

<div class="container mt-4 text-light">
    <div class="card bg-dark border-secondary">
        <div class="card-header border-secondary">
            <h4>📝 Yeni Görev Ekle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Add" method="post">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control bg-secondary text-white border-0" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control bg-secondary text-white border-0" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Görevi Kaydet</button>
                <a href="@Url.Action("Index", "ToDo")" class="btn btn-outline-light ms-2">İptal</a>
            </form>
        </div>
    </div>
</div>